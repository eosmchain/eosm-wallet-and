<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/commodityItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/durban_White"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/commodityPicIv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/album_dp_15"
        android:layout_marginTop="@dimen/album_dp_10"
        android:layout_marginBottom="@dimen/album_dp_10"
        android:scaleType="fitXY"
        android:src="@mipmap/blue_top_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/commodityNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/album_dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="sss"
        android:textSize="@dimen/small"
        app:layout_constraintStart_toEndOf="@id/commodityPicIv"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/commodityPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/album_dp_10"
        android:layout_marginTop="@dimen/album_dp_10"
        android:gravity="center_vertical"
        android:text="45"
        android:textColor="@color/qmui_config_color_red"
        android:textSize="@dimen/small"
        app:layout_constraintStart_toEndOf="@id/commodityPicIv"
        app:layout_constraintTop_toBottomOf="@id/commodityNameTv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/haveBrowsingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/album_dp_10"
        android:layout_marginTop="@dimen/album_dp_10"
        android:gravity="center_vertical"
        android:text="@string/str_have_browsing"
        android:textColor="@color/app_color_common_deputy"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/commodityPicIv"
        app:layout_constraintTop_toBottomOf="@id/commodityPriceTv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/threePointIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/album_dp_15"
        android:layout_marginBottom="@dimen/album_dp_4"
        android:src="@mipmap/ic_three_point"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_height"
        android:background="@drawable/qmui_divider"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>