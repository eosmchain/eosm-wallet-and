<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/paymentNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@mipmap/ic_bank_card"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:textColor="@color/app_color_common_black"
        android:textSize="@dimen/medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:text=">"
        android:textColor="@color/app_color_common_black"
        android:textSize="@dimen/big_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/usernameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="@dimen/album_dp_20"
        android:text=""
        android:textSize="@dimen/big_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paymentNameTv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/accountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="@dimen/album_dp_15"
        android:layout_marginRight="25dp"
        android:text="sss"
        android:textSize="@dimen/big_small"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameTv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/qrcodeIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="@dimen/album_dp_15"
        android:layout_marginRight="25dp"
        android:src="@mipmap/ic_ercode"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameTv" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="@dimen/album_dp_20"
        android:layout_marginRight="25dp"
        android:background="@color/app_color_common_black"
        app:layout_constraintTop_toBottomOf="@id/accountTv" />
</androidx.constraintlayout.widget.ConstraintLayout>