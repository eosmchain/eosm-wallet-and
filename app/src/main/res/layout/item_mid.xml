<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUIConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/midLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/album_dp_15"
    android:layout_marginRight="@dimen/album_dp_15"
    android:layout_marginBottom="@dimen/album_dp_15"
    android:background="@color/durban_White">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/midIconIv"
        android:layout_width="@dimen/album_dp_45"
        android:layout_height="@dimen/album_dp_45"
        android:layout_margin="5dp"
        android:src="@mipmap/icon_team"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/midIconIv"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/midTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:drawableRight="@mipmap/copy_icon"
            android:text="M0000000"
            android:textColor="@color/app_color_common_dark_black"
            android:textSize="@dimen/big_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/roleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/midTv"
            android:text="M0"
            android:textColor="@color/qmui_config_color_red"
            android:textSize="@dimen/big_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/addressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/midTv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/album_dp_4"
            android:drawableRight="@mipmap/copy_icon"
            android:text="x000000000000000000000000"
            android:textColor="@color/app_color_common_black"
            android:textSize="@dimen/small" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/app_color_description"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/midIconIv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mgpTv"
        android:layout_width="@dimen/album_dp_0"
        android:layout_height="@dimen/album_dp_45"
        android:gravity="center"
        android:text="0.0000MGP"
        android:textColor="@color/app_color_dark_blue"
        android:textSize="@dimen/big_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/line1"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <View
        android:id="@id/line1"
        android:layout_width="1px"
        android:layout_height="@dimen/album_dp_45"
        android:background="@color/app_color_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dollarTv"
        android:layout_width="@dimen/album_dp_0"
        android:layout_height="@dimen/album_dp_45"
        android:gravity="center"
        android:text="$0.00"
        android:textColor="@color/app_color_dark_blue"
        android:textSize="@dimen/big_small"
        app:layout_constraintLeft_toRightOf="@id/line1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />


</com.qmuiteam.qmui.layout.QMUIConstraintLayout>