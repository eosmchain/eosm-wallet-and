<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:padding="@dimen/activity_horizontal_margin"
    app:layout_constraintBottom_toBottomOf="parent">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/createBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/str_create"
        android:textColor="@color/app_color_dark_blue"
        android:textSize="@dimen/big_small"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:qmui_backgroundColor="@color/qmui_config_color_white"
        app:qmui_borderWidth="0dp"
        app:qmui_radiusTopLeft="8dp"
        app:qmui_radiusTopRight="8dp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/qmui_config_color_gray_8"
        app:layout_constraintBottom_toTopOf="@id/importBtn" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/importBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:text="@string/str_import"
        android:textColor="@color/app_color_dark_blue"
        android:textSize="@dimen/big_small"
        app:layout_constraintBottom_toTopOf="@id/cancelBtn"
        app:qmui_backgroundColor="@color/qmui_config_color_white"
        app:qmui_borderWidth="0dp"
        app:qmui_radiusBottomLeft="8dp"
        app:qmui_radiusBottomRight="8dp" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/str_cancel"
        android:textColor="@color/app_color_dark_blue"
        android:textSize="@dimen/big_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:qmui_backgroundColor="@color/qmui_config_color_white"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>