<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/subtractBtn"
        android:layout_width="@dimen/album_dp_20"
        android:layout_height="@dimen/album_dp_20"
        android:gravity="center"
        android:text="－"
        android:textColor="@color/app_color_common_black"
        android:textSize="@dimen/small"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/quantityTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_borderColor="@color/app_color_common_black"
        app:qmui_borderWidth="2.5px"
        app:qmui_radius="@dimen/album_dp_100" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/numTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/album_dp_15"
        android:layout_marginRight="@dimen/album_dp_15"
        android:gravity="center"
        android:text="0"
        android:textColor="#101010"
        android:textSize="@dimen/big_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/additionBtn"
        app:layout_constraintStart_toEndOf="@id/subtractBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/additionBtn"
        android:layout_width="@dimen/album_dp_20"
        android:layout_height="@dimen/album_dp_20"
        android:gravity="center"
        android:text="＋"
        android:textColor="@color/app_color_common_black"
        android:textSize="@dimen/small"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/quantityTv"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_borderColor="@color/app_color_common_black"
        app:qmui_borderWidth="2.5px"
        app:qmui_radius="@dimen/album_dp_100" />
</androidx.constraintlayout.widget.ConstraintLayout>