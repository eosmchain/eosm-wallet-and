<com.qmuiteam.qmui.layout.QMUIFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:layout_margin="@dimen/dp_15"
    android:background="@color/app_color_theme_10">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/coinView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@mipmap/ic_mgp_card_bg" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/noBackupTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="@dimen/dp_15"
        android:drawableLeft="@drawable/ic_warn"
        android:drawablePadding="@dimen/album_dp_4"
        android:gravity="center_vertical"
        android:text="@string/str_no_backup"
        android:textColor="@color/app_color_red"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moreIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="@dimen/dp_15"
        android:src="@mipmap/more_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/walletMainNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="MGP-Wallet"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="@dimen/big_small" />

    <LinearLayout
        android:id="@+id/walletNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/walletNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/qrcode_icon_3"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text=""
            android:textColor="@color/qmui_config_color_white"
            android:textSize="@dimen/small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/toActivateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/str_invite_friends_create"
            android:textColor="@color/app_color_blue"
            android:textSize="@dimen/small"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTolalAssetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/dp_15"
        android:text="$0.0000"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="@dimen/medium" />

</com.qmuiteam.qmui.layout.QMUIFrameLayout>
