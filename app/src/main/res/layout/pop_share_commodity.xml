<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/durban_White">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_0"
        app:layout_constraintBottom_toTopOf="@id/appiconIv"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appiconIv"
        android:layout_width="@dimen/album_dp_30"
        android:layout_height="@dimen/album_dp_30"
        android:layout_marginLeft="@dimen/album_dp_10"
        android:layout_marginTop="@dimen/album_dp_10"
        android:src="@mipmap/ic_mgp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sharerTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/album_dp_30"
        android:layout_marginLeft="@dimen/album_dp_10"
        android:layout_marginTop="@dimen/album_dp_10"
        android:gravity="center_vertical"
        android:text="@string/str_sharer"
        android:textColor="@color/app_color_common_hint"
        android:textSize="@dimen/micro"
        app:layout_constraintStart_toEndOf="@id/appiconIv"
        app:layout_constraintTop_toBottomOf="@id/banner" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/commodityNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="@dimen/album_dp_10"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:text="@string/str_sharer"
        android:textColor="@color/app_color_common_black"
        android:textSize="@dimen/small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sharerTv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/commodityPriceTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="@dimen/album_dp_10"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="$1097.21"
        android:textColor="@color/app_color_orange"
        android:textSize="@dimen/big_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commodityNameTv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewDetailsBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_35"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="@dimen/album_dp_10"
        android:layout_marginRight="25dp"
        android:background="@drawable/orange_radius_bg"
        android:text="@string/str_view_details"
        android:textColor="@color/durban_White"
        android:textSize="@dimen/big_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commodityPriceTv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/commandPromptTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/album_dp_10"
        android:gravity="center_vertical"
        android:text="@string/str_command_prompt"
        android:textColor="@color/app_color_common_hint"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewDetailsBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>