<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_background"
    android:fitsSystemWindows="true">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.qmuiteam.qmui.layout.QMUILinearLayout
                android:id="@+id/layout1"
                android:layout_width="@dimen/album_dp_0"
                android:layout_height="@dimen/durban_dp_70"
                android:layout_marginLeft="@dimen/album_dp_20"
                android:layout_marginTop="@dimen/album_dp_20"
                android:layout_marginRight="@dimen/album_dp_10"
                android:background="@color/app_color_baby_blue"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/layout2"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/str_yesterday_incentive"
                    android:textColor="@color/durban_White"
                    android:textSize="@dimen/big_small" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/stimulateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/album_dp_4"
                    android:text="0.0000"
                    android:textColor="@color/durban_White"
                    android:textSize="@dimen/big_small" />
            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <com.qmuiteam.qmui.layout.QMUILinearLayout
                android:id="@+id/layout2"
                android:layout_width="@dimen/album_dp_0"
                android:layout_height="@dimen/durban_dp_70"
                android:layout_marginLeft="@dimen/album_dp_10"
                android:layout_marginTop="@dimen/album_dp_20"
                android:layout_marginRight="@dimen/album_dp_20"
                android:background="@color/app_color_saffron_yellow"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/layout1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/str_yesterday_shared_motivation"
                    android:textColor="@color/durban_White"
                    android:textSize="@dimen/big_small" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sharedStimulateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/album_dp_4"
                    android:text="0.0000"
                    android:textColor="@color/durban_White"
                    android:textSize="@dimen/big_small" />
            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <com.qmuiteam.qmui.layout.QMUILinearLayout
                android:id="@+id/layout3"
                android:layout_width="@dimen/album_dp_0"
                android:layout_height="@dimen/durban_dp_70"
                android:layout_marginLeft="@dimen/album_dp_20"
                android:layout_marginTop="@dimen/album_dp_20"
                android:layout_marginRight="@dimen/album_dp_20"
                android:background="@color/app_color_green"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/layout4"
                app:layout_constraintTop_toBottomOf="@id/layout1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/str_yesterday_team_motivation"
                    android:textColor="@color/durban_White"
                    android:textSize="@dimen/big_small" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/teamStimulateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/album_dp_4"
                    android:text="0.0000"
                    android:textColor="@color/durban_White"
                    android:textSize="@dimen/big_small" />
            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <com.qmuiteam.qmui.layout.QMUILinearLayout
                android:id="@+id/layout4"
                android:layout_width="@dimen/album_dp_0"
                android:layout_height="@dimen/durban_dp_70"
                android:layout_marginLeft="@dimen/album_dp_10"
                android:layout_marginTop="@dimen/album_dp_20"
                android:layout_marginRight="@dimen/album_dp_20"
                android:background="@color/app_color_viridis"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/layout3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/str_yesterday_node_motivation"
                    android:textColor="@color/durban_White"
                    android:textSize="@dimen/big_small" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/nodeStimulateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/album_dp_4"
                    android:text="0.0000"
                    android:textColor="@color/durban_White"
                    android:textSize="@dimen/big_small" />
            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <com.qmuiteam.qmui.layout.QMUILinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/album_dp_20"
                android:layout_marginTop="@dimen/album_dp_20"
                android:layout_marginRight="@dimen/album_dp_20"
                android:background="@color/durban_White"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/layout3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/album_dp_35"
                    android:background="@color/app_color_red_1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:text="@string/str_my_shared_motivation"
                        android:textColor="@color/durban_White"
                        android:textSize="@dimen/big_small" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/shareIndexTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:layout_marginRight="@dimen/album_dp_15"
                        android:text="0%"
                        android:textColor="@color/durban_White"
                        android:textSize="@dimen/big_small" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/album_dp_35">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:text="@string/str_hierarchy_index"
                        android:textColor="@color/app_color_common_black"
                        android:textSize="@dimen/big_small" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/hierarchyIndexTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:layout_marginRight="@dimen/album_dp_15"
                        android:text="0"
                        android:textColor="@color/app_color_common_black"
                        android:textSize="@dimen/big_small" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/album_dp_35">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:text="@string/str_light_node"
                        android:textColor="@color/app_color_common_black"
                        android:textSize="@dimen/big_small" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/lightNodeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:layout_marginRight="@dimen/album_dp_15"
                        android:text="@string/str_no"
                        android:textColor="@color/app_color_common_black"
                        android:textSize="@dimen/big_small" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/album_dp_35">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:layout_toLeftOf="@id/currencyValueTv"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/str_currency_value"
                        android:textColor="@color/app_color_common_black"
                        android:textSize="@dimen/big_small" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/currencyValueTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:layout_marginRight="@dimen/album_dp_15"
                        android:text="0.0000MGP"
                        android:textColor="@color/app_color_common_black"
                        android:textSize="@dimen/big_small" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/album_dp_35">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:layout_toLeftOf="@id/marketValueTv"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/str_market_value"
                        android:textColor="@color/app_color_common_black"
                        android:textSize="@dimen/big_small" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/marketValueTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:layout_marginRight="@dimen/album_dp_15"
                        android:text="$0.00"
                        android:textColor="@color/app_color_common_black"
                        android:textSize="@dimen/big_small" />
                </RelativeLayout>
            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <androidx.appcompat.widget.SearchView
                android:id="@+id/midSearchView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_dp_50"
                android:layout_marginLeft="@dimen/album_dp_20"
                android:layout_marginTop="@dimen/album_dp_15"
                android:layout_marginRight="@dimen/album_dp_20"
                android:background="@drawable/white_radius_bg_5"
                app:iconifiedByDefault="false"
                app:layout_constraintTop_toBottomOf="@id/layout5"
                app:queryHint="@string/str_please_enter_mid" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/contributionListTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/album_dp_20"
                android:layout_marginTop="@dimen/album_dp_10"
                android:text="@string/str_contribution_list"
                android:textColor="@color/app_color_common_black"
                android:textSize="@dimen/big_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/midSearchView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mango_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/album_dp_15"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/contributionListTv"
                tools:listitem="@layout/item_mid" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>