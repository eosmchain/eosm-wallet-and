<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/album_dp_35">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editt1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:enabled="true"
        android:focusable="true"
        android:hint="@string/str_please_enter_DHL_name"
        android:textColor="@color/app_color_common_black"
        android:textColorHint="@color/app_color_common_hint"
        android:textSize="@dimen/small"
        android:theme="@style/MyEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editt2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_45"
        android:layout_marginTop="@dimen/album_dp_15"
        android:hint="@string/str_please_enter_tracking_number"
        android:textColor="@color/app_color_common_black"
        android:textColorHint="@color/app_color_common_hint"
        android:textSize="@dimen/small"
        android:theme="@style/MyEditText"
        app:layout_constraintTop_toBottomOf="@id/editt1" />
</androidx.constraintlayout.widget.ConstraintLayout>