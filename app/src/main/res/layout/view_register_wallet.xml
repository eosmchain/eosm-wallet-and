<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/qrCodeIv"
                android:layout_width="@dimen/durban_dp_200"
                android:layout_height="@dimen/durban_dp_200"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/album_dp_20" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/accountNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/durban_dp_30"
                android:text="@string/str_account_name"
                android:textColor="@color/app_color_common_dark_black"
                android:textSize="@dimen/big_small" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/accountNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:maxLength="12"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:hint="@string/str_account_name_rule"
                android:textColor="@color/app_color_common_black"
                android:textSize="@dimen/small" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/errorTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="5dp"
                android:text="@string/str_account_name_rule"
                android:textColor="@color/qmui_config_color_red"
                android:textSize="@dimen/small"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ownerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/album_dp_15"
                android:text="@string/str_owner_publickey"
                android:textColor="@color/app_color_common_dark_black"
                android:textSize="@dimen/big_small" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ownerPublickeyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/qmui_config_color_gray_4"
                android:textSize="@dimen/small" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/str_active_publickey"
                android:textColor="@color/app_color_common_dark_black"
                android:textSize="@dimen/big_small" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activePublickeyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/qmui_config_color_gray_4"
                android:textSize="@dimen/small" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/shareQrCodeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/album_dp_45"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:padding="@dimen/album_dp_15"
                android:text="@string/str_share_code"
                android:textColor="@color/qmui_config_color_white"
                app:qmui_backgroundColor="@color/item_divider_bg_color"
                app:qmui_borderWidth="@dimen/album_dp_0"
                app:qmui_radius="5dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</merge>